{
    "name": "bitpesa/bitpesa-php-sdk",
    "version": "0.3.0",
    "description": "BitPesa Client Library for PHP",
    "homepage": "http://api.bitpesa.co/documentation",
    "license": "MIT",
    "authors": [
        {
            "name": "BTC Africa S.A",
            "homepage": "https://www.bitpesa.co",
            "email": "engineers@bitpesa.co"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "squizlabs/php_codesniffer": "~2.6",
        "friendsofphp/php-cs-fixer": "~2.12"
    },
    "autoload": {
        "psr-4": { "BitPesa\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "BitPesa\\" : "test/" }
    }
}
